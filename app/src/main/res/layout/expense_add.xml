<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ask_new_expense"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="expenselog.pa2.expenselog.askNewExpense">

    <Button
        android:text="@string/okey"
        android:layout_height="wrap_content"
        android:id="@+id/okButton"
        android:background="?attr/actionModeSplitBackground"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="40dp"
        android:layout_alignRight="@+id/empty"
        android:textColor="?attr/colorPrimary" />
    <View
        android:id="@+id/empty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="330dp"
        />

    <Button
        android:text="@string/nope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="?attr/colorButtonNormal"
        android:layout_marginRight="40dp"
        android:layout_alignBaseline="@+id/okButton"
        android:layout_alignLeft="@+id/empty"
        android:layout_alignBottom="@+id/okButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:textColor="?attr/actionMenuTextColor" />

    <TextView
        android:text="@string/notesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/notesText"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/titleEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="13"
        android:minLines="1"
        android:gravity="top|left"
        android:maxLines="15"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignBaseline="@+id/notesText"
        android:layout_alignBottom="@+id/notesText"
        android:layout_toRightOf="@+id/notesText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"

        android:layout_alignBaseline="@+id/titleEditText"
        android:layout_alignBottom="@+id/titleEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/titleEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

</RelativeLayout>
